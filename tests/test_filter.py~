from __future__ import division, absolute_import, print_function

import unittest
import numpy as np

from pywim2 import channel

class TestChannelFilter(unittest.TestCase):
    def test_multipath(self):
        model = channel.Model()
        input = np.ones([1, 10])
        coef = np.matrix(
            np.vstack((np.ones([1,10]),
                       2*np.ones([1,10]),
                       3*np.ones([1,10]))))
        delay = [0,1,2]
        output = model.filter(input, coef, delay)
        self.assertTrue((output == np.array([1,3,6,6,6,6,6,6,6,6])).all())

    def test_multiantenna(self):
        
        
if __name__ == '__main__':
    unittest.main()
    


